{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "allowUnreachableCode": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "declaration": true,
    "outDir": "dist"
  },
  "exclude": ["tests", "examples"],
  "include": ["common", "mysql", "pg"]
}
