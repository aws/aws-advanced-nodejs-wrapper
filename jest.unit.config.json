{
  "moduleFileExtensions": ["ts", "js", "json"],
  "testMatch": ["<rootDir>/tests/unit/*.(spec|test).ts|tsx"],
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "diagnostics": false,
        "useESM": true
      }
    ]
  },
  "transformIgnorePatterns": ["node_modules"],
  "moduleNameMapper": {
    "^uuid$": "uuid"
  },
  "testEnvironment": "node",
  "extensionsToTreatAsEsm": [".ts"],
  "reporters": ["default"]
}
